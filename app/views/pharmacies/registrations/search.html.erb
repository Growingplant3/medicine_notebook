<div class="container-login">
  <div class="mb-3">
    <h2><%= t('activerecord.attributes.pharmacy.search_function') %></h2>
    <%= search_form_for(@q, url:pharmacies_search_path) do |f| %>
      <%= f.label :name, t('activerecord.attributes.pharmacy.enter_pharmacy_name') %>
      <%= f.search_field :name_cont %>

      <%= f.label :name, t('activerecord.attributes.pharmacy.enter_pharmacy_postcode') %>
      <%= f.search_field :postcode_cont %>

      <%= f.label :email, t('activerecord.attributes.pharmacy.enter_pharmacy_email') %>
      <%= f.search_field :email_cont %>

      <%= f.submit t('activerecord.attributes.pharmacy.search') %>
    <% end %>
  </div>

  <h2><%= t('activerecord.attributes.pharmacy.all_pharmacies') %></h2>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th><%= t('activerecord.attributes.pharmacy.name') %></th>
        <th><%= t('activerecord.attributes.pharmacy.postcode') %></th>
        <th><%= t('activerecord.attributes.pharmacy.email') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pharmacies.each do |pharmacy| %>
        <tr>
          <td><%= pharmacy.name %></td>
          <td><%= pharmacy.postcode %></td>
          <td><%= pharmacy.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to t('activerecord.attributes.pharmacy.top_page'), root_path, class: 'btn btn-info btn-block mb-4' %>
  </div>
</div>