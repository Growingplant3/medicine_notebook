<header class="hf-both">
  <nav class="navbar navbar-expand navbar-light fixed-top">
    <div class="">
      <%= link_to t('.application_title'), root_path, class: 'navbar-brand' %>
    </div>

    <nav class="navbar navbar-expand navbar-light nav.sticky-top justify-content-end">
      <div id="Navber">
        <ul class="navbar-nav">
          <% if user_signed_in? || pharmacy_signed_in? %>
            <% if user_signed_in? %>
              <li class="nav-item active">
              <%= link_to t('.user_account_edit'), edit_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to t('.user_sign_out'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% end %>
            <% if pharmacy_signed_in? %>
              <li class="nav-item active">
                <%= link_to t('.pharmacy_account_edit'), edit_pharmacy_registration_path, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to t('.pharmacy_sign_out'), destroy_pharmacy_session_path, method: :delete, class: 'nav-link' %>
              </li>
              <%# 次モデル追加部分 %>
            <% end %>

          <% else %>
            <li class="nav-item active">
              <%= link_to t('.user_sign_up'), new_user_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to t('.user_sign_in'), new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to t('.pharmacy_sign_up'), new_pharmacy_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to t('.pharmacy_sign_in'), new_pharmacy_session_path, class: 'nav-link' %>
            </li>
              <%# 次モデル追加部分 %>
          <% end %>
        </ul>
      </div>
  </nav>

  <nav class="navbar navbar-expand navbar-light">
    <% if user_signed_in? %>
      <% if current_user.name.present? %>
        <h1><%= current_user.name + t('.sign_in_every_user') %></h1>
      <% else %>
        <h1><%= current_user.email+ t('.sign_in_every_user') %></h1>
      <% end %>
    <% end %>
    <% if pharmacy_signed_in? %>
      <% if current_pharmacy.name.present? %>
        <h1><%= current_pharmacy.name + t('.sign_in_every_user') %></h1>
      <% else %>
        <h1><%= current_pharmacy.email+ t('.sign_in_every_user') %></h1>
      <% end %>
    <% end %>

    <%# 次モデル追加部分 %>
  </nav>
</header>