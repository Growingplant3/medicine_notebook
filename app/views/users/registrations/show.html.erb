  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.sick') %></strong>
    <%= current_user.sick %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.operation') %></strong>
    <%= current_user.operation %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.remarks') %></strong>
    <%= current_user.remarks %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.opinion') %></strong>
    <%= current_user.opinion %>
  </div>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to t('user.registrations.show.update'), edit_user_registration_path, class: 'btn btn-success btn-block mb-4' %>
    <%= link_to t('user.registrations.show.destroy'), "/users/#{current_user.id}", method: :delete, data: { confirm: t('user.registrations.show.are_you_sure')}, class: 'btn btn-danger btn-block mb-4' %>
    <%= link_to t('user.registrations.show.sign_out'), destroy_user_session_path, method: :delete, class: 'btn btn-warning btn-block mb-4' %>
  </div>
</div>