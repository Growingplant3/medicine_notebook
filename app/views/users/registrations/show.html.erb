<div class="container-login">
  <%= render 'shared/flash_messages' %>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.name') %></strong> 
    <%= current_user.name %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.postcode') %></strong>
    <%= current_user.postcode%>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.prefecture_code') %></strong>
    <%= current_user.prefecture_code %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.address_city') %></strong>
    <%= current_user.address_city %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.address_street') %></strong>
    <%= current_user.address_street %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.address_building') %></strong>
    <%= current_user.address_building %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.telephone_number') %></strong>
    <%= current_user.telephone_number %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.age') %></strong>
    <%= current_user.age %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.sex') %></strong>
    <%= current_user.sex_i18n %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.body_weight') %></strong>
    <%= current_user.body_weight %>
  </div>

  <div class="form-gruop">
    <strong><%= t t('user.registrations.show.blood_types') %></strong>
    <%= current_user.blood_types_i18n %>
  </div>

  <div class="form-gruop">
    <strong><%= t('user.registrations.show.side_effect') %></strong>
