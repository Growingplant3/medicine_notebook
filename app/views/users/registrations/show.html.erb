<div class="container-login">
  <%= render 'shared/flash_messages' %>

  <div class="form-gruop">
    <strong><%= t '.name' %></strong> 
    <%= @user.name %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.postcode' %></strong>
    <%= @user.postcode%>
  </div>

  <div class="form-gruop">
    <strong><%= t '.prefecture_code' %></strong>
    <%= @user.prefecture_code %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.address_city' %></strong>
    <%= @user.address_city %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.address_street' %></strong>
    <%= @user.address_street %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.address_building' %></strong>
    <%= @user.address_building %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.telephone_number' %></strong>
    <%= @user.telephone_number %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.age' %></strong>
    <%= @user.age %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.sex' %></strong>
    <%= @user.sex_i18n %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.body_weight' %></strong>
    <%= @user.body_weight %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.blood_types' %></strong>
    <%= @user.blood_types_i18n %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.side_effect' %></strong>
    <%= @user.side_effect %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.allergy' %></strong>
    <%= @user.allergy %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.sick' %></strong>
    <%= @user.sick %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.operation' %></strong>
    <%= @user.operation %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.remarks' %></strong>
    <%= @user.remarks %>
  </div>

  <div class="form-gruop">
    <strong><%= t '.opinion' %></strong>
    <%= @user.opinion %>
  </div>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to t(".update"), edit_user_registration_path, class: 'btn btn-success btn-block mb-4' %>
    <%= link_to t(".destroy"), "/users/#{current_user.id}", method: :delete, data: { confirm: '本当に削除しても良いですか？'}, class: 'btn btn-danger btn-block mb-4' %>
    <%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, class: 'btn btn-warning btn-block mb-4' %>
  </div>
</div>